<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Ghar.Ghar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bigwada</name>
    <description>  
        Start Your Business With Kalam Academy
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       Kalam Academy Team
    </author>
     <!-- New addition-->
    <content src="index.html" />
    <preference name="ErrorUrl" value="index.html"/>
    <preference name="DisallowOverscroll" value="true" />
	<preference name="android-targetSdkVersion" value="33" />
	<!-- <preference name="android-compileSdkVersion" value="32" /> -->

    <preference name="AndroidXEnabled" value="true" />

    

    <plugin name="cordova-plugin-geolocation" source="npm" spec="4.1.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="3.0.0" />
    <plugin name="cordova.plugins.diagnostic" source="npm" spec="7.1.0"/>
    <plugin name = "cordova-plugin-x-socialsharing-android12" source="npm"/>
    <plugin name="cordova-plugin-androidx-adapter" />
    

	<feature name="SocialSharing">
            <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
        </feature>


    <platform name="android">
		<icon src="www/icon.png"/>
        <!-- <edit-config file="app/src/main/AndroidManifest.xml" target="/manifest/application/activity" mode="merge">
            <activity android:exported="true" />
        </edit-config>
        <edit-config file="app/src/main/AndroidManifest.xml" target="/manifest/application/service" mode="merge">
            <service android:exported="true" />
        </edit-config> -->
        
    </platform>

 <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/icon.png" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    
<engine name="android" spec="12.0.0" />

</widget>
